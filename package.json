{
  "name": "electron-progress-bar",
  "version": "1.0.3",
  "description": "A desktop app for creating customizable, widget-like progress bars. Built with Electron, React, and Tailwind.",
  "main": "dist/main.js",
  "desktopName": "progress-tracker.desktop",
  "scripts": {
    "dev": "npm run compile && concurrently -k \"npm:watch\" \"npm:dev:*\"",
    "dev:react": "cd frontend && npm run dev",
    "dev:electron": "wait-on tcp:5173 && VITE_DEV_SERVER_URL=http://localhost:5173 electron .",
    "build": "npm run compile && cd frontend && npm run build",
    "pack": "npm run build && electron-builder --linux deb",
    "start": "electron .",
    "compile": "tsc",
    "watch": "tsc -w",
    "test": "cd frontend && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MihaiAC/electron-progress-bar.git"
  },
  "keywords": [],
  "author": {
    "name": "MihaiAC",
    "email": "alexmihai.ciobanu@gmail.com"
  },
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/MihaiAC/electron-progress-bar/issues"
  },
  "homepage": "https://github.com/MihaiAC/electron-progress-bar#readme",
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@types/node": "^24.0.3",
    "concurrently": "^9.1.2",
    "electron": "^36.4.0",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.1",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^16.2.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.34.1",
    "wait-on": "^8.0.3"
  },
  "dependencies": {
    "dotenv": "^17.2.1",
    "electron-store": "^8.2.0",
    "pkce-challenge": "^5.0.0"
  },
  "build": {
    "appId": "com.mihaiac.progresstracker",
    "productName": "ProgressTracker",
    "files": [
      "dist/main.js",
      "dist/preload.js",
      "dist/ipc",
      "dist/utils",
      "dist/types",
      "frontend/dist/**/*",
      "assets/icon.png"
    ],
    "directories": {
      "output": "release",
      "buildResources": "assets"
    },
    "linux": {
      "target": "deb",
      "category": "Utility",
      "icon": "assets/icons",
      "executableName": "progress-tracker",
      "desktop": {
        "StartupWMClass": "ProgressTracker"
      }
    }
  }
}
